
<header>
  <div class="main-menu">
    <div class="logo">
      <%= link_to root_path,class: "edit-link" do %>
        <p>ちりつも節約</p>
      <% end %>
    </div>
    <div class="pc-menu">
      <ul>
        <li>
          <%= link_to (t 'defaults.posts'), posts_path %>
          <ul>
            <li><%= link_to (t 'defaults.post'), new_post_path %></li>
            <li><%= link_to (t 'defaults.new_order'), posts_path(latest: "true") %></li>
            <li><%= link_to (t 'defaults.old_order'), posts_path(old: "true") %></li>
            <li><%= link_to (t 'defaults.like_order'), posts_path(most_liked: "true") %></li>
          </ul>
        </li>
        <li>
          <%= link_to (t 'defaults.my_page'), my_page_path %>
        </li>
        <li>
          <%= link_to (t 'defaults.user_list'), users_index_path %>
        </li>
        <li>
          <%= link_to (t 'defaults.record'), records_path %>
        </li>
        <li>
          <%= link_to (t 'defaults.target'), new_target_path %>
        </li>
        <li>
          <%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete } %>
        </li>
      </ul>
    </div>
    <div class="sp-menu">
      <input type="checkbox" id="sp-menu__check">
      <label for="sp-menu__check" class="sp-menu__box">
        <span></span>
      </label>
      <div class="sp-menu__content">
        <ul class="sp-menu__list">
          <li class="sp-menu__item">
            <%= link_to (t 'defaults.posts'), posts_path, class: "sp-menu__link" %>
            <ul>
              <li><%= link_to (t 'defaults.post'), new_post_path, class: "sp-menu__link" %></li>
              <li><%= link_to (t 'defaults.new_order'), posts_path(latest: "true"), class: "sp-menu__link" %></li>
              <li><%= link_to (t 'defaults.old_order'), posts_path(old: "true"), class: "sp-menu__link" %></li>
              <li><%= link_to (t 'defaults.like_order'), posts_path(most_liked: "true"), class: "sp-menu__link" %></li>
            </ul>
          </li>
          <li class="sp-menu__item">
            <%= link_to (t 'defaults.my_page'), my_page_path, class: "sp-menu__link" %>
          </li>
          <li class="sp-menu__item">
            <%= link_to (t 'defaults.user_list'), users_index_path, class: "sp-menu__link" %>
          </li>
          <li class="sp-menu__item">
            <%= link_to (t 'defaults.record'), records_path, class: "sp-menu__link" %>
          </li>
          <li class="sp-menu__item">
            <%= link_to (t 'defaults.target'), new_target_path, class: "sp-menu__link" %>
          </li>
          <li class="sp-menu__item">
            <%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete }, class: "sp-menu__link" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>