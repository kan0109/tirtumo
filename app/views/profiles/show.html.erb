<div class="test_box">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-3">
        <h1 class="float-left mt-4"><%= t('.title') %></h1>
        <table class="table">
          <tr>
            <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
            <td style="padding: 30px 0;"><%= current_user.email %></td>
          </tr>
          <tr>
            <th scope="row"><%= t(User.human_attribute_name(:name)) %></th>
            <td style="padding: 30px 0;"><%= current_user.decorate.name %></td>
          </tr>
          <tr>
            <th scope="row"><%= t(User.human_attribute_name(:avatar)) %></th>
            <td style="padding: 30px 0;"><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '70x70' %></td>
          </tr>
        </table>
        <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success float-right' %>
      </div>
    </div>
  </div>
</div>