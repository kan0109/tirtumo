<body class="background-user-image">
  <div class="test_box">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-3 border border-dark p-4">
          <h1><%= t '.title' %></h1>
          <%= form_with model: @user, local: true do |f| %>
            <div class="form-group-user mb-4 mt-5">
              <%= f.label :name %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.text_field :name, class: 'form-control', placeholder: '田中太郎' %>
            </div>
            <div class="form-group-user mb-4 mt-5">
              <%= f.label :email %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.email_field :email, class: 'form-control', placeholder: 'example@mail.com' %>
            </div>
            <div class="form-group-user mb-4 mt-5">
              <%= f.label :password %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.password_field :password, class: 'form-control', placeholder: '6文字以上入力してください' %>
            </div>
            <div class="form-group-user mb-4 mt-5">
              <%= f.label :password_confirmation %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '6文字以上入力してください' %>
            </div>
            <%= f.submit (t 'defaults.register'), class: 'btn btn-dark' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>