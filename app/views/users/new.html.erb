<div class="test_box font_test">
  <div class="background">   
    <div class="container"> 
      <div class="row">
        <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
          <h1><%= t '.title' %></h1>
          <%= form_with model: @user, local: true do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group mb-4">     
              <%= f.label :name %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.text_field :name, class: 'form-control', placeholder: '田中太郎' %>
            </div>
            <div class="form-group mb-4">
              <%= f.label :email %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.email_field :email, class: 'form-control', placeholder: 'example@mail.com' %>
            </div>
            <div class="form-group mb-4">
              <%= f.label :password %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.password_field :password, class: 'form-control', placeholder: '6文字以上入力してください' %>
            </div>
            <div class="form-group mb-4">
              <%= f.label :password_confirmation %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '6文字以上入力してください' %>
            </div>
            <%= f.submit (t 'defaults.register'), class: 'btn btn-dark' %>
          <% end %>
          <div class='text-center mb-5'>
            <%= link_to (t '.to_login_page'), login_path, class: 'btn btn-dark'%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>