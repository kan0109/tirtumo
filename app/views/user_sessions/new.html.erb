<div class="test_box font_test">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1><%= t '.title' %></h1>
        <%= form_with scope: :user, url: login_path, local: true do |f| %>
          <div class="form-group mb-4">
            <%= f.label :email, User.human_attribute_name(:email) %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group mb-4">
            <%= f.label :password, User.human_attribute_name(:password) %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <%= f.submit t('defaults.login'), class: 'btn btn-primary' %>
        <% end %>
        <div class='text-center mb-3'>
          <%= link_to t('user_sessions.new.new_registration'), new_user_path, class: "edit-link" %><br>
        </div>
        <div class='text-center mb-3'>
          <%= link_to t('user_sessions.new.password_forget'), new_password_reset_path, class: "edit-link" %> 
        </div>
      </div>
    </div>
  </div>
</div>
