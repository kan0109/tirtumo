<body class="background-user-image">    
  <div class="session_test_box">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-3 border border-dark p-4">
          <div class="mt-8"> 
            <h1 class="mt-8"><%= t '.title' %></h1>
          </div>
          <%= form_with scope: :user, url: login_path, local: true do |f| %>
            <div class="form-group-user mb-4 mt-5">
              <%= f.label :email, User.human_attribute_name(:email) %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="form-group-user mb-4 mt-5">
              <%= f.label :password, User.human_attribute_name(:password) %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <%= f.submit t('defaults.login'), class: 'btn btn-dark' %>
          <% end %>
        </div>
      </div>
      <div class='text-center mb-3'>
        <%= link_to t('user_sessions.new.new_registration'), new_user_path, class: "edit-link" %><br>
      </div>
      <div class='text-center mb-3'>
        <%= link_to t('user_sessions.new.password_forget'), new_password_reset_path, class: "edit-link" %> 
      </div>
    </div>
  </div>
</body>