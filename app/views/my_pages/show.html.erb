<body class="my-wrap">
  <div class="content">  
    <h1 class="my-heading-lv1 text-center"><%= t('.title') %></h1>
      <div class="profile-image">
        <%= image_tag @user.avatar.url, class: 'rounded-circle', id: 'preview', size: '130x130' %>
      </div>

      <h2 class="heading-lv2 heading-margin text-center"><%= @user.decorate.name %></h2>
      <p class="text text-center"><%= link_to (t 'profiles.edit.title'), profile_path, class: 'btn btn-success'%></p>

      <h3 class="heading-lv3 heading-margin text-center"><%= t('.save_note') %></h3>
      <p class="text text-center"><%= t('.total_savings') %><%= @savings %>円</p>
      <p class="text text-center <%= determine_level(current_user.level || 1) %>">
        レベル: <%= current_user.level || 1 %> (<%= determine_level(current_user.level || 1) %>)
      </p>
      <% latest_target = @user.targets.last %>
      <% if latest_target %>
        <p class="text text-center"><%= t('.save_target') %><%= latest_target.target %></p>
        <p class="text text-center"><%= t('.target_money') %><%= latest_target.target_amount %>円</p>
      <% end %>
      <h3 class="heading-lv3 heading-margin text-center"><%= link_to (t 'defaults.post'), new_post_path,class: 'dropdown-item' %></h3>
      <h3 class="heading-lv3 heading-margin text-center"><%= t('.your_post') %></h3>
      <% @user.posts.each do |post| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.content %></p>
            <%= link_to t('defaults.detail'), post_path(post), class: 'btn btn-primary' %>
            <%= link_to t('defaults.delete'),post_path(post), id: "button-delete-#{post.id}", data: { turbo_method: :delete }, class: 'btn btn-danger', onclick: "return confirm('投稿を削除しますか？');" %>
          </div>
        </div>
      <% end %>
      <h3 class="heading-lv3 heading-margin text-center"><%= t('.like_post') %></h3>
      <% @user.liked_posts.each do |post| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.content %></p>
            <%= link_to t('defaults.detail'), post_path(post), class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
  </div>
</body>
