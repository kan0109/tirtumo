<h1 class="card-title" style="text-align:center">マイページ</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5 mx-auto">
        <div class="card-body">
            <h2 class="card-title" style="text-align:center"><%= @user.decorate.name %></h2>
            <div class='avatar'>
              <%= image_tag @user.avatar.url, class: 'rounded-circle', id: 'preview', size: '130x130' %>
            </div>
            <div class= 'profile_edit' style="margin-top: 80px;">
            <%= link_to (t 'profiles.edit.title'), profile_path, class: 'btn btn-success'%>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5 mx-auto">
        <div class="card-body">
          <h3>My Posts</h3>
          <% @user.posts.each do |post| %>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= post.content %></p>
                <%= link_to t('defaults.detail'), post_path(post), class: 'btn btn-primary' %>
                <%= link_to t('defaults.delete'),post_path(post), method: :delete, data: { confirm: t('defaults.confirm') },class: 'btn btn-danger' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .avatar {
    float: right;
    margin-left: px;
  }
</style>
