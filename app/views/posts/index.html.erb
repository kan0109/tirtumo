<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <%= render "search", post: @post %>
      <div class="row row-cols-1 row-cols-md-2 g-2">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <div class="mt-3">
        <%= paginate @posts, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>
