<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="row justify-content-center">
  <div class="container text-center mt-4">
    <span>
      <%= image_tag visitor.avatar_url.to_s, class: "icon_mini", size: "30x30" %>
      <strong><%= visitor.name %></strong>
      さんが
      <% case notification.action %>
      <% when 'like' %>
        <%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;", class: "edit-link" %>
        にいいねしました
      <% when 'comment' %>
        <% if notification.post.user_id == visited.id %>
          <%= link_to "あなたの投稿", notification.post, style: "font-weight: bold;", class: "edit-link" %>
        <% else %>
          <span>
            <%= link_to post_path(notification.post) do %>
              <%= image_tag visitor.avatar_url.to_s, class: "icon_mini", size: "30x30" %>
              <strong><%= notification.post.user.name %></strong>さんの投稿
            <% end %>
          </span>
        <% end %>
        にコメントしました
        <p class="text-muted mb-0">
          <%= Comment.find_by(id: notification.comment_id)&.content %>
        </p>
      <% end %>
    </span>
    <div class="small text-muted text-right">
      <%= time_ago_in_words(notification.created_at).upcase %>前に通知
    </div>
  </div>
</div>
