<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= User.human_attribute_name(:name) %></th>
          <th scope="col"><%= Post.human_attribute_name(:title) %></th>
        </tr>
        </thead>
        <tbody>
        <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>