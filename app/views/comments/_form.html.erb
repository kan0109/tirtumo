<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: comment, url: [post, comment], id: 'new_comment' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_area :content, class: 'form-control mb-3', id: 'js-new-comment-content', row: 4, placeholder: Comment.human_attribute_name(:content) %>
      <%= f.submit 'コメントする', class: "btn btn-secondary search-btn" %>
    <% end %>
  </div>
</div>